<%= polaris_page(
  title: "Products (#{@graphql ? "Graphql" : "REST"})",
  back_url: home_path
) do %>
  <%= polaris_card do %>
    <%= polaris_list do |list| %>
      <% @products.each do |product| %>
        <% list.with_item { product.title } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
